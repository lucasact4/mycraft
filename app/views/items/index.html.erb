<div class="background">
  <div class="inner-div">
    <%= render 'shared/page_title', title: "Itens disponÃ­veis" %>
    
    <div align="center">
      <%= will_paginate %>
      <% @items.each do |ite| %>
        <ul class="listing">
          <div class="row">
            <div class="well col-md-4 col-md-offset-4">
              <li class="player-title"><%= link_to ite.name.capitalize, item_path(ite) %></li>
              <li>
                <small>
                  <% if ite.posts.count == 1 %>
                    <%= "#{ite.posts.count} postagem" %>
                  <% else %>
                    <%= "#{ite.posts.count} postagens" %>
                  <% end %>
                </small>
              </li>
              <% if logged_in? && current_player.admin? %>
                <li class="button-edit btn btn-xs btn-warning"><%= link_to "Editar item", edit_item_path(ite) %></li>
                <li class="button-edit btn btn-xs btn-danger"><%= link_to "Excluir item", item_path(ite), method: :delete,
                    data: { confirm: "Tem certeza de que deseja excluir esta postagem?" } %></li>
              <% end %>
            </div>
          </div>
        </ul>
      <% end %>
      <%= will_paginate %>
    </div>
  </div>
</div>